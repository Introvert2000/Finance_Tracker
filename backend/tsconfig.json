{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",    // Compiled files go to the 'dist' folder
    "rootDir": "./src",    // Source files are in the 'src' folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],   // Include all TypeScript files in the 'src' folder
  "exclude": ["node_modules"]
}
